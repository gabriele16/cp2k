&GLOBAL
 RUN_TYPE ENERGY
 PROJECT_NAME ne
 PRINT_LEVEL MEDIUM
&END GLOBAL
&FORCE_EVAL
&PROPERTIES
&TDDFPT
 NSTATES 2
 MAX_ITER 20
 MAX_KV 60
 CONVERGENCE 1.0E-6
 KERNEL FULL
  &XC
   &XC_FUNCTIONAL PBE
   &END XC_FUNCTIONAL
  &END XC
  &SOC
   EPS_FILTER 1.0E-15
  &END SOC
  &PRINT
   &SOC_PRINT
    SPLITTING T
    SOME T
    UNIT_wn
   &END SOC_PRINT
  &END PRINT
&END TDDFPT
&END PROPERTIES
&DFT
 BASIS_SET_FILE_NAME  BASIS_MOLOPT
 POTENTIAL_FILE_NAME  GTH_SOC_POTENTIALS
 &SCF
  SCF_GUESS ATOMIC
  EPS_SCF 1.0E-7
  MAX_SCF 20
  &OUTER_SCF
   EPS_SCF 1.0E-7
   MAX_SCF 200
  &END OUTER_SCF
  &OT
   PRECONDITIONER FULL_ALL
   MINIMIZER DIIS
  &END OT
 &END SCF
 &MGRID
  CUTOFF 500
  REL_CUTOFF 40
 &END
&QS
 METHOD GPW
&END QS
&POISSON
 PERIODIC NONE
 PSOLVER MT
&END POISSON
&XC
 &XC_FUNCTIONAL PBE
 &END XC_FUNCTIONAL
&END XC
&END DFT
&SUBSYS
 &CELL
  ABC 5.0 5.0 5.0
  PERIODIC NONE
 &END CELL
&TOPOLOGY
 &CENTER_COORDINATES
 &END
&END TOPOLOGY
&COORD
 Ne 0.0 0.0 0.0
&END COORD
&KIND Ne
 BASIS_SET DZVP-MOLOPT-SR-GTH
 POTENTIAL GTH-PBE
&END KIND
&END SUBSYS
&END FORCE_EVAL
